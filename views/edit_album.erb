<h1>Update <%=@album.name() %></h1>

<form action="/albums/<%= @album.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename album</label>
  <input id="name" name="name" type="text" value="<%= @album.name() %>">
  <label for="name">Edit album year</label>
  <input id="year" name="year" type="text" value="<%= @album.album_year() %>">
  <label for="cost">Edit album cost</label>
  <input id="cost" name="cost" type="text" value="<%= @album.cost() %>">

  <button type="submit">Update</button>
</form>

<form action="/albums/<%= @album.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete album</button>
</form>
<p><a href="/albums">Return to album list</a></p>
